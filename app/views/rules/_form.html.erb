<%= form_for(@rule) do |f| %>
  <% if @rule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rule.errors.count, "error") %> prohibited this rule from being saved:</h2>

      <ul>
      <% @rule.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :rule %><br />
    <%= f.text_area :rule, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label :description %>: (Optional) Describe what your rule is supposed to do<br />
    <%= f.text_area :description, :rows => 3  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
