<h3>Mad-Libs</h3>

<% operators_array = ["", ">", ">=", "=", "<=", "<"] %>
<% values_array = [""] %>
<% sensor_conditionals_array = ["then", "and"] %>
<% actuator_conditionals_array = ["", "and"] %>

<div id="condition_1">
  <span class="code">if</span> 
  <%= collection_select(:sensor, :name, Sensor.all, :id, :name, { :prompt => true }, { :class=>'sensor_name' } ) %>
  <%= select(:sensor, :operator, operators_array, { }, { :class=>'sensor_operator' } ) %>
  <%= select(:sensor, :value, values_array, { }, { :class=>'sensor_value' } ) %>
  <%= select(:sensor, :conditional, sensor_conditionals_array, { }, { :class=>'sensor_conditional' } ) %>
</div> <!-- condition1 -->

<div id="action_1">
  <span class="code">set</span> 
  <%= collection_select(:actuator, :name, Actuator.all, :id, :name, { :prompt => true }, { :class=>'sensor_name' } ) %>
  <span class="code">to</span>
  <%= select(:actuator, :value, values_array, { }, { :class=>'actuator_value' } ) %>
  <%= select(:actuator, :conditional, actuator_conditionals_array, { }, { :class=>'actuator_conditional' } ) %>
</div> <!-- action1 -->

<br/>

<%= form_for @rule, :html => { :id => "madlib_create" } do |f| %>
	<div class="field" style="display:none">
    <%= f.label :rule %><br />
    <%= f.text_area :rule, :rows => 3 %>
  </div>

	<div class="field">
    <%= f.label :description %>: (Optional) Describe what your rule is supposed to do<br/>
    <%= f.text_area :description, :rows => 3 %>
  </div>

  <%= f.submit :name => "Create Madlibs Rule", :valu => "Create Madlibs Rule", :id => "madlib-create" %>
<% end %>
