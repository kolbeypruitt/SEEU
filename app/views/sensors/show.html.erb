<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @sensor.name %>
</p>

<p>
  <b>Description:</b>
  <%= @sensor.description %>
</p>

<p>
  <b>Manufacturer:</b>
  <%= @sensor.manufacturer %>
</p>

<p>
  <b>Model:</b>
  <%= @sensor.model %>
</p>

<p>
  <b>Data uri:</b>
  <%= link_to @sensor.data_uri, @sensor.data_uri %>
</p>

<p>
  <b>Readings:</b>
  <div id="sensor-readings" style="display:none">
    <%= render :partial => "readings/reading", :collection => @sensor.readings.reverse[0..2] %>
    <hr/>
  </div>
  <div id="readings" style="display:none">
    <%= render @sensor.readings %>
    <hr/>
  </div>
  <ul id="sensor-readings">
    <%= render :partial => "readings/reading", :collection => @readings %>
  </ul> <!-- sensor-readings -->
  <%= will_paginate @readings %>
</p>

<p>
  <b>Configuration uri:</b>
  <%= link_to @sensor.configuration_uri, @sensor.configuration_uri %>
</p>

<%= link_to 'Back', sensors_path %> | 
<%= link_to 'Edit', edit_sensor_path(@sensor) %>
