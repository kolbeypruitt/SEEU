<h1>Listing models</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Manufacturer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @models.each do |model| %>
  <tr>
    <td><%= model.name %></td>
    <td><%= model.manufacturer.name %></td>
    <td><%= link_to 'Show', manufacturer_model_path(@manufacturer, model) %></td>
    <td><%= link_to 'Edit', edit_manufacturer_model_path(@manufacturer, model) %></td>
    <td><%= link_to 'Destroy', manufacturer_model_path(@manufacturer, model), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Back', manufacturer_path(@manufacturer) %>
<%= link_to 'New Model', new_manufacturer_model_path(@manufacturer) %>
